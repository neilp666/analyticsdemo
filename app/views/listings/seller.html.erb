<h1>My Job listings</h1>

<table class="table">
  <thead>
    <tr>
      <th>Job</th>
      <th>Description</th>
      <th>Salary</th>
      <th>Location</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
      <tr>
        <td><strong><%= listing.job %></strong></td>
        <td><%= listing.description %></td>
        <td><%= number_to_currency(listing.salary) %></td>
        <td><%= listing.location %></td>
        <td><%= link_to 'Show', listing, class: "btn btn-link" %></td>
        <% if (user_signed_in?) && (current_user == listing.user) %>
          <td><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></td>
          <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Post a New Job', new_listing_path, class: "btn btn-link" %>
<% end %>