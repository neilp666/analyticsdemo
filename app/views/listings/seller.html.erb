<table class="table table-striped table-bordered">
    <tr>
      <th class="center">Job</th>
      <th class="center">Description</th>
      <th class="center">Salary</th>
      <th class="center">Location</th>
      <th class="center">Posted</th>
    </tr>

    <% @listings.each do |listing| %>
      <tr>
        <td class="center"><%= listing.job %></td>
        <td class="center"><%= listing.description %></td>
        <td class="center"><%= number_to_currency(listing.salary) %></td>
        <td class="center"><%= listing.location %></td>
        <td class="center"><%= listing.created_at.strftime("%B %-d, %Y") %></td>
        <td>
          <div class="btn-group">
              <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
            Action <span class="caret"></span>
              </button>

              <ul class="dropdown-menu" role="menu">
                <li><%= link_to 'View', listing, class: "btn btn-link" %></li>
                <li><%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %></li>
                <li><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %></li>
               </ul>
          <div>
        </td>
       </tr>
    <% end %>
</table>

<br>

<% if user_signed_in? %>
  <%= link_to 'Post a New Job', new_listing_path, class: "btn btn-link" %>
<% end %>